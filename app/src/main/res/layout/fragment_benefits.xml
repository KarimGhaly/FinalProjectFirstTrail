<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPayStubFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.constraint.Guideline
                        android:id="@+id/guidelineA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.05"
                        tools:layout_editor_absoluteY="91dp"
                        tools:layout_editor_absoluteX="28dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guidelineB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.85"
                        tools:layout_editor_absoluteY="91dp"
                        tools:layout_editor_absoluteX="320dp" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Total PTO:"
                        android:textSize="@dimen/payStub_rowTitleTextSize"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineA"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/display_rectangle"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:text="15"
                        android:textSize="@dimen/payStub_displayTextSize"
                        app:layout_constraintBottom_toBottomOf="@+id/textView"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineB"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineB"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"

                        android:padding="5dp"
                        android:text="Used PTO"
                        android:textSize="@dimen/payStub_rowTitleTextSize"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineA"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/display_rectangle"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:text="5"
                        android:textSize="@dimen/payStub_displayTextSize"
                        app:layout_constraintBottom_toBottomOf="@+id/textView3"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineB"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineB"
                        app:layout_constraintTop_toTopOf="@+id/textView3"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Remaining PTO:"
                        android:textSize="@dimen/payStub_rowTitleTextSize"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineA"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/display_rectangle"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:text="10"
                        android:textSize="@dimen/payStub_displayTextSize"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineB"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineB"
                        app:layout_constraintTop_toTopOf="@+id/textView5"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.constraint.Guideline
                        android:id="@+id/guidelineC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"
                        tools:layout_editor_absoluteY="91dp"
                        tools:layout_editor_absoluteX="119dp" />


                    <android.support.constraint.Guideline
                        android:id="@+id/guidelineD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        tools:layout_editor_absoluteY="91dp"
                        tools:layout_editor_absoluteX="192dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guidelineE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.77"
                        tools:layout_editor_absoluteY="91dp"
                        tools:layout_editor_absoluteX="291dp" />

                    <Button
                        android:id="@+id/tvPto_btnViewRequestedPto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="View Requested PTO"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineC"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineC" />

                    <Button
                        android:id="@+id/tvPto_btnViewUsedPto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="View Used PTO"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineE"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineE" />

                    <Button
                        android:id="@+id/tvPto_btnRequestPto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Request PTO"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/guidelineD"
                        app:layout_constraintTop_toBottomOf="@+id/tvPto_btnViewUsedPto"
                        app:layout_constraintRight_toLeftOf="@+id/guidelineD" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
</ScrollView>