<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPto_totalPtoTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:text="Net Pay:"
                android:textSize="@dimen/payStub_rowTitleTextSize"
                app:layout_constraintRight_toLeftOf="@+id/guidelineA"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotals_netPay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/display_rectangle"
                android:gravity="center"
                android:text="$425.00"
                android:textSize="@dimen/displayTextSize"
                app:layout_constraintLeft_toLeftOf="@+id/guidelineS"
                app:layout_constraintRight_toLeftOf="@+id/guidelineS"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPto_totalPto"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:gravity="end|center_vertical"
                android:padding="5dp"

                android:text="Gross Pay YTD:"
                android:textSize="@dimen/payStub_rowTitleTextSize"
                app:layout_constraintRight_toLeftOf="@+id/guidelineA"
                app:layout_constraintTop_toBottomOf="@+id/tvPto_totalPtoTitle" />

            <TextView
                android:id="@+id/tvTotals_grossPayYTD"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/display_rectangle"
                android:gravity="center"
                android:text="$4,000.00"
                android:textSize="@dimen/displayTextSize"
                app:layout_constraintLeft_toLeftOf="@+id/guidelineS"
                app:layout_constraintRight_toLeftOf="@+id/guidelineS"
                app:layout_constraintTop_toBottomOf="@+id/tvTotals_netPay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:text="Net Pay YTD:"
                android:textSize="@dimen/payStub_rowTitleTextSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guidelineA"
                app:layout_constraintTop_toBottomOf="@+id/tvPto_totalPto"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvTotals_netPayYTD"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/display_rectangle"
                android:gravity="center"
                android:text="$4,000.00"
                android:textSize="@dimen/displayTextSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guidelineS"
                app:layout_constraintRight_toLeftOf="@+id/guidelineS"
                app:layout_constraintTop_toBottomOf="@+id/tvTotals_grossPayYTD" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.87" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>