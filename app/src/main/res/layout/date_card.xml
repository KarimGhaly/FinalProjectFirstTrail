<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDate_payDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:gravity="end"
                android:padding="5dp"
                android:text="Pay Date:"
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline_vertical_in_center"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDate_payDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="9/21/17"
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline_vertical_in_center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDate_startDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:padding="5dp"
                android:text="Period:"
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintRight_toLeftOf="@+id/tvDate_startDate"
                app:layout_constraintTop_toBottomOf="@+id/tvDate_payDateTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDate_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="9/1/17"
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintRight_toLeftOf="@+id/guideline_vertical_in_center"
                app:layout_constraintTop_toBottomOf="@+id/tvDate_payDateTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDate_endDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:padding="5dp"
                android:text="- "
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintLeft_toLeftOf="@+id/guideline_vertical_in_center"
                app:layout_constraintLeft_toRightOf="@+id/tvDate_startDate"
                app:layout_constraintTop_toBottomOf="@+id/tvDate_payDate"
                android:layout_marginLeft="-1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDate_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="9/14/17"
                android:textSize="@dimen/payStub_displayTextSize"
                app:layout_constraintLeft_toRightOf="@+id/tvDate_endDateTitle"
                android:layout_marginLeft="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDate_payDate" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_in_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>