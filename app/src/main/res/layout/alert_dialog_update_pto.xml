<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">


    <EditText
        android:id="@+id/tvUpdatePto_dateFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date From: MM/DD/YYYY"
        android:clickable="true"
        android:inputType="none" />

    <EditText
        android:id="@+id/tvUpdatePto_dateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date To: MM/DD/YYYY"
        android:inputType="none"
        android:clickable="true"/>


    <EditText
        android:id="@+id/tvUpdatePto_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnSubmitUpdatePto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Update" />

        <Button
            android:id="@+id/btnUpdateCancelAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Cancel" />

    </LinearLayout>
    <Button
        android:id="@+id/btnDeleteUpdatePto"
        android:textColor="@color/colorAlertDialogButtons"
        android:text="Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>