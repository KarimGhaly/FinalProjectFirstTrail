<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">


    <EditText
        android:id="@+id/tvRequestPto_dateFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date From: MM/DD/YYYY"
        android:clickable="true"
        android:inputType="none" />

    <EditText
        android:id="@+id/tvRequestPto_dateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date To: MM/DD/YYYY"
        android:inputType="none"
        android:clickable="true"/>


    <EditText
        android:id="@+id/tvRequestPto_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnSubmitRequestPto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Submit" />

        <Button
            android:id="@+id/btnCancelAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>