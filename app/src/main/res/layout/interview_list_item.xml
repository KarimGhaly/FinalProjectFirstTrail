<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.finalprojectfirsttrail.TFragments.MarketingFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"

                >

                <TextView
                    android:id="@+id/tvInterviews_companyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="My IT Works, Final Round"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvInterviews_dateTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Time:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />



                <TextView
                    android:id="@+id/tvInterviews_interviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="10/21/2017"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_dateTimeTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginBottom="8dp" />


                <TextView
                    android:id="@+id/tvInterviews_interviewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="10:30PM"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_interviewDate"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvInterviews_interviewNamesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Interviewer Names:"
                    app:layout_constraintBottom_toBottomOf="@+id/tvInterviews_interviewerNames"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_interviewTime" />

                <TextView
                    android:id="@+id/tvInterviews_interviewerNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Ruffus"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_interviewNamesTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_interviewNamesTitle" />

                <TextView
                    android:id="@+id/tvInterviews_mentorNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="0dp"
                    android:text="Mentor:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_mentorName" />




                <TextView
                    android:id="@+id/tvInterviews_mentorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Manroop Singh"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_mentorNameTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_interviewNamesTitle" />


                <TextView
                    android:id="@+id/tvInterviews_clientTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Client:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_mentorNameTitle" />


                <TextView
                    android:id="@+id/tvInterviews_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="My IT Works"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_clientTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_clientTitle" />
                <TextView
                    android:id="@+id/tvInterviews_vendorTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Vendor:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_clientTitle" />
                <TextView
                    android:id="@+id/tvInterviews_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Ektello"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_vendorTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_vendorTitle" />
                <TextView
                    android:id="@+id/tvInterviews_projectCityAndStateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Project City and State:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_vendorTitle" />

                <TextView
                    android:id="@+id/tvInterviews_projectCityAndState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Palmetta, Florida"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_projectCityAndStateTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_projectCityAndStateTitle" />

                <TextView
                    android:id="@+id/tvInterviews_projectDurationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Project Duration:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_projectCityAndStateTitle" />

                <TextView
                    android:id="@+id/tvInterviews_projectDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="6+ Months contract to hire"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_projectDurationTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_projectDurationTitle" />

                <TextView
                    android:id="@+id/tvInterviews_availabilityDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Availability Date:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_projectDurationTitle" />

                <TextView
                    android:id="@+id/tvInterviews_availabilityDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Immediate"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_availabilityDateTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_availabilityDateTitle" />
                <TextView
                    android:id="@+id/tvInterviews_clientWebsiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Client Website:"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_availabilityDateTitle" />

                <TextView
                    android:id="@+id/tvInterviews_clientWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="www.myitworks.com"
                    app:layout_constraintLeft_toRightOf="@+id/tvInterviews_clientWebsiteTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvInterviews_clientWebsiteTitle" />



                <Button
                    android:id="@+id/tvInterviews_btnMoreDetails"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="More Details"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvInterviews_clientWebsiteTitle"
                    app:layout_constraintVertical_bias="0.0" />


                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".05" />






            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>